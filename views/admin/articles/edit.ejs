<%- include ('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbar.ejs') %>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Edição de artigo</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/update">
                    <input type="hidden" name="id" value="<%= article.id %>">
                    <input class='form-control' type="text" name="title" value="<%=article.title %>" placeholder="Defina o titulo do artigo!"><br>
                    <label>Categoria</label>
                    <select id="category" name="category" class="form-control">
                        <% categories.forEach((category) => { %>

                            <% if(category.id == article.categoryId){ %>
                                <option name="category" value="<%= category.id %>" selected ><%= category.title %></option>
                            <% }else {%>
                                <option name="category" value="<%= category.id %>" ><%= category.title %></option>
                            <%} %>

                            
                        <% }); %>
                    </select>
                    <br>
                    <textarea class="form-control" placeholder="Escreva o Artigo aqui!" name="body" id="article"> <%= article.body %></textarea>
                    
                    <br>
                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
            
        </div>        
    </div>
